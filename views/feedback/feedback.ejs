<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Feedback Form</title>
<style>
  body {
    font-family: Arial, sans-serif;
    padding: 30px;
    background:  #ffffff;  
  }

  h2 {
    color: #000000;  
  }

  form {
    background: #2f3b4c;  
    padding: 30px;
    border-radius: 8px;
    width: 50%;
    margin: 1rem auto;
    box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    color: #ffffff;  
  }

  label {
    display: block;
    margin-top: 15px;
    font-weight: bold;
    color: #ffffff;  
  }

  input[type="text"],
  input[type="email"],
  textarea {
    width: 100%;
    margin-top: 5px;
    padding: 10px;
    border: 1.8px solid #ccc;
    border-radius: 4px;
    font-size: 1em;
    resize: vertical;
    background-color: #ffffff; 
    color: #000000;  
  }

  input::placeholder,
  textarea::placeholder {
    color: #aaaaaa;  
  }

  textarea {
    min-height: 80px;
  }

  button {
    margin-top: 20px;
    background-color: #ffffff;  
    color: #000000;  
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1em;
  }

  button:hover {
    background-color: #2c3440;  
  }

  /* Added validation styles */
  input.valid {
    border-color: green;
  }

  input.invalid {
    border-color: red;
  }


    html {
      background-image: url(../images/site/checkerboard.jpg);
      background-size: contain;
      background-repeat: repeat;
      margin: 0;
      height: 100%;
    }

    body {
      width: 70%;
      margin: auto;
      border: 5px solid #03436b;
      background: white;
      padding: 10px;
      border-radius: 8px;
    }
   
</style>
</head>
<body>
  <h2>Leave Us Feedback</h2>
  <form action="/submit-feedback" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" placeholder="Enter your name" required />

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="Enter your email" required />

    <label for="message">Message:</label>
    <textarea id="message" name="message" placeholder="Enter your message" required></textarea>

    <button type="submit">Submit</button>
  </form>
   <!-- JavaScript for live validation -->
  <script>
    const nameInput = document.getElementById("name");
    const emailInput = document.getElementById("email");

    function validateName(name) {
      return /^[A-Za-z\s]{2,}$/.test(name.trim());
    }

    function validateEmail(email) {
      return /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/.test(email.trim());
    }

    function handleValidation(input, isValid) {
      input.classList.remove("valid", "invalid");
      input.classList.add(isValid ? "valid" : "invalid");
    }

    nameInput.addEventListener("input", () => {
      handleValidation(nameInput, validateName(nameInput.value));
    });

    emailInput.addEventListener("input", () => {
      handleValidation(emailInput, validateEmail(emailInput.value));
    });
  </script>
</body>
</html>

  

